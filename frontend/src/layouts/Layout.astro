---
import '../colors.css'
import Footer from './footer.astro'

interface Props {
  title: string
  showFooter?: boolean
}

const { title, showFooter } = Astro.props

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
{showFooter && <Footer />}
  </body>
</html>
<style is:global>
  :root {
    --max-width: 1200px;
    --inline-padding: 2rem;
    --border-radius: 0.75rem;
  }
  html {
    font-family: system-ui, sans-serif;
  }
  body {
    margin: 0;
    font-size: 1.125rem;
    line-height: 1.6;
    background: var(--primary-light);
    color: var(--secondary-dark);
  }
  .container {
    width: min(var(--max-width), 100% - var(--inline-padding) * 2);
    margin-inline: auto;
  }
  img {
    max-width: 100%;
    display: block;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  .text-center {
    text-align: center;
  }

  .capitalize::first-letter {
    text-transform: uppercase;
  }

  .external-link {
    color: var(--accent);
    text-underline-offset: 0.2rem;
    display: flex;
    align-items: center;
    transition: opacity 0.2s ease-in-out;
  }
  .external-link:hover {
    text-decoration: none;
    opacity: 75%;
  }
  .external-link > i {
    margin-inline-start: 0.5rem;
    font-size: 0.875rem;
    opacity: 75%;
  }
  footer {
    margin-top: 8rem;
    padding: 2rem 0;
    border-top: 1px solid var(--secondary-light);
    font-size: 0.875rem;
    display: flex;
    justify-content: space-between;
  }
</style>
