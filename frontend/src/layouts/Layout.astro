---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --background: #13151a;
    --foreground: #dedede;
    --accent: 136, 58, 234;
    --max-width: 1200px;
    --inline-padding: 2rem;
  }
  html {
    font-family: system-ui, sans-serif;
    color-scheme: light dark;
  }
  body {
    margin: 0;
    font-size: 1.125rem;
    line-height: 1.6;
  }
  .container {
    width: min(var(--max-width), 100% - var(--inline-padding) * 2);
    margin-inline: auto;
  }
  img {
    max-width: 100%;
    display: block;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
