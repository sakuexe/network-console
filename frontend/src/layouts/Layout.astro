---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --background: #13151a;
    --background-lighter: #1a1c22;
    --foreground: #dedede;
    --accent: 136, 58, 234;
    --shadow-color: #000000;
    --max-width: 1200px;
    --inline-padding: 2rem;
    --border-radius: 0.75rem;
  }
  html {
    font-family: system-ui, sans-serif;
    color-scheme: light dark;
  }
  body {
    margin: 0;
    margin-block: 4rem 8rem;
    font-size: 1.125rem;
    line-height: 1.6;
  }
  .container {
    width: min(var(--max-width), 100% - var(--inline-padding) * 2);
    margin-inline: auto;
  }
  img {
    max-width: 100%;
    display: block;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  .external-link {
    color: var(--accent);
    text-underline-offset: 0.2rem;
    display: flex;
    align-items: center;
    transition: opacity 0.2s ease-in-out;
  }
  .external-link:hover {
    text-decoration: none;
    opacity: 75%;
  }
  .external-link > i {
    margin-inline-start: 0.5rem;
    font-size: 0.875rem;
    opacity: 75%;
  }
</style>
