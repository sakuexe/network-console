---
import Layout from '../../../layouts/Layout.astro'
import ManagementConsole from './_console.tsx'
import type { Device } from '../../_devices.astro'
import getApiUrl from '../../../utils/apiurl.ts'
const API_URL = getApiUrl()

export async function getStaticPaths() {
// get all the devices for the static paths on build
  const response = await fetch('http://localhost:5000/devices')
  const devices = await response.json()
  return devices.map((device: Device, index: number) => ({ params: { id: device.id } }));
}


---

<Layout title="Management console">
  <section>
  <ManagementConsole client:only deviceId={parseInt(Astro.params.id || "1")} apiUrl={API_URL} />
  </section>
</Layout>

<style is:inline>

  header {
    margin-block: 2rem 1rem;
  }

  header h2, header p {
    margin-block: 0;
  }

  header p {
    font-size: 1rem;
    color: var(--secondary-dark);
    opacity: 75%;
  }

  section {
    width: 100%;
  }

  main {
    width: min(100%, 600px);
    margin-inline: auto;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: .75rem;
  }

  form > div {
    display: flex;
    flex-direction: column;
  }

  form output p.success {
    font-size: 1rem;
    opacity: 75%;
    color: var(--secondary);
  }

  form output p.error {
    font-size: 1rem;
    opacity: 75%;
    color: #de4037;
  }

  form label {
    font-size: 1rem;
    color: var(--secondary-dark);
    opacity: 75%;
  }

  form input, form textarea {
    padding: 0.5rem;
    border: 1px solid var(--secondary);
    background-color: var(--primary-light);
    border-radius: 0.25rem;
    font-size: 1rem;
    font-family: inherit;
    color: var(--secondary-dark)
  }

  form input:focus, form textarea:focus {
    background-color: var(--primary);
  }

  form .buttons {
    display: flex;
    flex-direction: row;
    gap: .1rem;
  }

  form .buttons > * {
    width: min(100%, 12rem);
    padding: 0.5rem 1rem;
    margin-inline: auto;
    border: none;
    border-radius: 0.25rem;
    font-size: 1rem;
    font-family: inherit;
    cursor: pointer;
  }

  form .buttons button {
    background-color: var(--secondary);
    color: var(--primary-light);
    flex-grow: 1;
  }

  form .buttons a {
    color: var(--secondary);
    border: 1px solid var(--secondary);
    background-color: var(--primary-light);
    text-align: center;
    text-decoration: none;
  }
</style>
